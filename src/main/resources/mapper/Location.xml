<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.anyikang.dao.LocationMapper">

    <!--
    <resultMap id="locationInfo" type="com.anyikang.model.Location">
        <id column="locationId" property="locationId" />
        <result column="locationPower" property="locationPower" />
        <result column="locationTime" property="locationTime" />
    </resultMap>
    -->
    <select id="findLocationInfoByDeviceId" parameterType="java.lang.Integer" resultType="com.anyikang.model.Location">
        SELECT * from location where deviceId=#{deviceId}
    </select>
    
    <select id="findLocationByDeviceAndDateSection" parameterType="com.anyikang.model.LocationCustom" resultType="com.anyikang.model.Location">
        select * from location  where location.deviceId = #{deviceId} and locationTime between #{startDate} and #{endDate} order by locationId desc
    </select>

     <insert id="addLocationMessage" parameterType="com.anyikang.model.Location" >
        INSERT INTO location
              (locationId,
               deviceId,
               locationType,
               locationLongitude,
               locationLatitude,
               locationPower,
               locationTime,
               serverTime
               )
        VALUES
              (#{locationId},
               #{deviceId},
               #{locationType},
               #{locationLongitude},
               #{locationLatitude},
               #{locationPower},
               #{locationTime},
               #{serverTime}
               )
     </insert>
     
</mapper>